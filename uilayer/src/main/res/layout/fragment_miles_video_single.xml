<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/miles_item_v_space"
            android:layout_marginBottom="@dimen/miles_item_v_space"
            android:layout_marginRight="@dimen/miles_item_h_space"
            android:layout_marginLeft="@dimen/miles_item_h_space"
            android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_icon_sun_training"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/video_green_light" />

            <TextView
                android:id="@+id/text_title_fragment_mile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:padding="3dp"
                android:text="TITLE"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
        </LinearLayout>


        <ImageView
            android:id="@+id/singleMileImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/miles_single_item_height"
            android:layout_gravity="center"
            android:clickable="true"
            android:layout_below="@+id/layout_title"
            android:scaleType="fitXY"
            android:src="@drawable/bulletin_back" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>