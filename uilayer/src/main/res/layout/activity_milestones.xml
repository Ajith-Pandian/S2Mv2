<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_milestones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uilayer.milestones.MilestonesActivity">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_milestones"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:id="@+id/layout_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_no_data"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/error_no_data" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_no_data"
            android:layout_centerHorizontal="true"
            android:text="No Data"
            android:textColor="@android:color/black" />
    </RelativeLayout>
</RelativeLayout>
