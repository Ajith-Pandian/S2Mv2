<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root_miles"
    android:padding="16dp"
    android:clickable="true"
    android:layout_height="wrap_content">

    <com.example.uilayer.customUtils.MCQCheckBox
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/checkbox_mcq"
        app:state_selected="true"
        android:text="8"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:background="@drawable/mcq_answer_selector"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/checkbox_mcq"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_answer"
            android:layout_width="wrap_content"
            android:textColor="@color/text_secondary"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:gravity="left"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="@string/school_msg_one"/>
    </LinearLayout>


</RelativeLayout>