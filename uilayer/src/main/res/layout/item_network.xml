<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_network"
    android:layout_margin="2dp"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:src="@drawable/profile"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/image_profile"
                android:layout_toLeftOf="@+id/button_call"
                android:layout_toRightOf="@+id/image_profile"
                android:layout_toStartOf="@+id/button_call">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="2dp"
                    android:gravity="start"
                    tools:text="Bill Gates"
                    android:maxLines="1"
                    android:textColor="@color/text_color1"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:orientation="horizontal"
                    android:layout_alignLeft="@+id/name"
                    android:layout_alignStart="@+id/name"
                    android:layout_below="@id/name">

                    <TextView
                        android:id="@+id/text_designation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:gravity="center"
                        tools:text="Teacher"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />
                    <LinearLayout
                        android:id="@+id/layout_wows"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <View
                        android:layout_width="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/text_color1"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/text_wows"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        tools:text="105 Wow"
                        android:textColor="@color/text_secondary"
                        android:textSize="10sp" />
                    <View
                        android:layout_width="1dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/text_color1"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/text_miles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        tools:text="28 Miles"
                        android:textColor="@color/text_secondary"
                        android:textSize="10sp" />
                </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <ImageButton
                android:id="@+id/button_call"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_call_green_24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@null"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="6dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>