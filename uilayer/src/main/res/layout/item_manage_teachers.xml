<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_school_update_root"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical"
    android:padding="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <ImageView
                android:id="@+id/dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/ic_more_horiz_black_8dp" />

            <ImageView
                android:id="@+id/image_profile_teacher"
                tools:src="@drawable/profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_above="@+id/text_teacher_name"
                android:layout_below="@+id/dots"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/text_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text_teacher_phone_num"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:text="Teacher Name"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/text_teacher_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:text="123456789"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>