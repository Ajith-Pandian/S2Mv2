<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_more_horiz_black_8dp" />

    <ImageView
        android:id="@+id/image_profile_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        tools:src="@drawable/profile" />

    <TextView
        android:id="@+id/text_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_profile_teacher"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:text="Teaxher Name"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/text_teacher_phone_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_teacher_name"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:text="123456789"
        android:textColor="@color/colorPrimary" />
</RelativeLayout>