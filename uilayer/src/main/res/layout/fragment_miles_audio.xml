<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_teacher"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/miles_item_v_space"
            android:layout_marginBottom="@dimen/miles_item_v_space"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="@dimen/miles_item_h_space"
                android:layout_marginLeft="@dimen/miles_item_h_space"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_icon_sun_training"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/audio_light_green" />

                <TextView
                    android:id="@+id/text_title_fragment_mile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:padding="3dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="AUDIO"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_below="@+id/layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>