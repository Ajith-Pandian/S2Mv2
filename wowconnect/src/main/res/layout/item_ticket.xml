<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_ticket"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/image_user_ticket"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                tools:src="@drawable/profile" />

            <TextView
                android:id="@+id/text_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/image_user_ticket"
                android:layout_toLeftOf="@+id/text_status"
                android:layout_toRightOf="@+id/image_user_ticket"
                android:layout_toStartOf="@+id/text_status"
                android:textColor="@color/text_color2"
                android:textSize="12sp"
                tools:text="Michael Jackson" />

            <LinearLayout
                android:id="@+id/layout_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_user_name"
                android:layout_toEndOf="@+id/image_user_ticket"
                android:layout_toLeftOf="@+id/text_status"
                android:layout_toRightOf="@+id/image_user_ticket"
                android:layout_toStartOf="@+id/text_status"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/fade_red"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    tools:text="Content" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/text_color3" />

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color3"
                    android:textSize="9sp"
                    tools:text="20.11.2016" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/text_color3" />

                <TextView
                    android:id="@+id/text_ticket_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color3"
                    android:textSize="9sp"
                    tools:text="#123456" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/text_status"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/rounded_background"
                android:gravity="center"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                app:backgroundTint="@color/red1"
                tools:text="SOLVED" />

            <TextView
                android:id="@+id/text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_desc"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/image_user_ticket"
                android:layout_toRightOf="@+id/image_user_ticket"
                android:textColor="@color/text_color3"
                android:textSize="12sp"
                tools:text="@string/school_msg_two" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>